<% provide(:title, "プロフィール編集") %>

<div class="user-edit-size">
  <div class="user-edit-frame container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="row">
        <div class="col-md-3 col-12">
          <div class="icon-image-flex">
            <div class="icon-image-selects">
              <% if current_user.avatar.url %>
                <img src="<%= current_user.avatar.url %>" class="icon-image-class" style="height: 90px; width: 90px;">
              <% else %>
                <img src="/uploads/user/avatar/default.png" class="icon-image-class" style="height: 90px; width: 90px;">
              <% end %>
              <%= f.label :アイコン変更, class: "icon-edit-btn", for: "user_avatar" %>
              <%= f.file_field :avatar, accept: 'image/jpeg,image/gif,image/png', class: "avatar_select" %>
            </div>
          </div>
        </div>
        <div class="col-md-9 col-12">
          <% if resource.errors.any? %>
            <% resource.errors.full_messages.each do |message| %>
              <div class="profile-edit-validation">・ <%= message %></div>
            <% end %>
          <% end %>

          <div class="profile-edit-field profile-edit-field-username">
            <%= f.text_field :username, class: "profile-edit-input profile-edit-username", autofocus: true %>
          </div>

          <div class="profile-edit-field profile-edit-field-email">
            <div class="profile-edit-label">メールアドレス</div>
            <%= f.email_field :email, class: "profile-edit-input" %>
          </div>

          <div class="profile-edit-field profile-edit-field-profile">
            <div class="profile-edit-label">プロフィール</div>
            <%= f.text_area :profile, class: "profile-edit-input" %>
          </div>

          <div class="profile-edit-field profile-edit-field-password">
            <div class="profile-edit-label">パスワード</div>
            <%= f.password_field :password, class: "profile-edit-input", autocomplete: "new-password" %>
          </div>

          <div class="profile-edit-field profile-edit-field-password-conf">
            <div class="profile-edit-label">パスワード(確認)</div>
            <%= f.password_field :password_confirmation, class: "profile-edit-input", autocomplete: "new-password" %>
          </div>

          <div class="profile-edit-btn-div">
            <%= f.submit "編集完了", class: "profile-edit-btn" %>
          </div>

        </div>
      </div>
    <% end %>
    <div class="delete-registration">
      <%= link_to "退会する", registration_path(resource_name), data: { confirm: "本当に、消去してもよろしいですか？" }, class: "delete-registration-link", method: :delete %>
    </div>
  </div>
</div>

