<h2>投稿の編集</h2>

<%= form_for(@review) do |f| %>
<% if @review.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-danger">
    The form contains <%= pluralize(@review.errors.count, "error") %>.
  </div>
  <ul>
  <% @review.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>

  <div class="field">
    <%= f.label :画像 %><br/>
    <% if @review.picture.url %>
      <img src="<%= @review.picture.url %>">
    <% else %>
      <b>画像はありません</b>
    <% end %>
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png', class: "file_edit_form" %>
  </div>

  <div class="field">
    <%= f.label :タイトル %><span>※必須</span><br/>
    <%= f.text_field :title, class: "title_edit_form" %>
  </div>

  <div class="field">
    <%= f.label :リンク %><br/>
    <%= f.text_field :link, class: "link_edit_form" %>
  </div>

  <div class="field">
    <%= f.label :評価 %><span>※必須</span><br/>
    <%= f.number_field :rate, min: 1, max: 5, class: "rate_edit_form" %>
  </div>

  <div class="field">
    <%= f.label :内容 %><span>※必須</span><br/>
    <%= f.text_area :content, placeholder: "テキストを入力してください...", class: "content_edit_form" %>
  </div>

  <%= f.submit "編集完了" %>
<% end %>
