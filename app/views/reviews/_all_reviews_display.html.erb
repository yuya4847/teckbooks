<% if current_user.already_report?(review) %>
  <span>通報済</span>
<% else %>
<div id="open_report_modal_<%= review.id %>" class="open_report_modal">通報</div>
<div class="report_modal_content" id="report_modal_<%= review.id %>" style="display: none;">
  <div class="modal-back">
    <div class="modal_close close_report_modal_<%= review.id %>">
    </div>
    <div class="report_modal_body">
      <div class="modal_close_btn close_report_modal_<%= review.id %>">✖︎</div>
        <%= form_with url: reports_path, local: false do |f| %>
          <%= hidden_field_tag :review_id, review.id %>
          <%= f.submit "通報", html: { class: "report-button" }, id: :report_button, data: { confirm: 'Is this what you want?' } %>
        <% end %>
    </div>
  </div>
</div>

<% end %>

<script type="text/javascript">
  $(`.open_report_modal`).on('click',function(){
    $(this).next().fadeIn();
    return false;
  });

  $(`.modal_close`).on('click',function(){
    $(this).closest('.report_modal_content').fadeOut();
    return false;
  });
</script>

<style media="screen">

  .open_modal {
    cursor: pointer;
    display: inline-block;
  }

  .open_report_modal {
    cursor: pointer;
    display: inline-block;
  }

  .modal-back {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .8);
  }

  .modal_close {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .report_modal_body {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateY(-50%) translateX(-50%);
    -webkit- transform: translateY(-50%) translateX(-50%);
    width: 400px;
    height: 400px;
    background-color: white;
    border-radius: 10px;
  }

  .modal_close_btn {
    font-size: 30px;
    line-height: 25px;
    cursor: pointer;
    text-align: center;
    vertical-align: middle;
    display: inline-block;
  }
</style>
