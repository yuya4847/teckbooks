<% provide(:title, "投稿作成") %>
<h2>投稿</h2>

<%= form_for(@review) do |f| %>
<% if @review.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-danger">
    The form contains <%= pluralize(@review.errors.count, "error") %>.
  </div>
  <ul>
  <% @review.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>

  <div class="field">
    <%= f.label :画像 %><br/>
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png', class: "file_form" %>
  </div>

  <div class="field">
    <%= f.label :タイトル %><span>※必須</span><br/>
    <%= f.text_field :title, class: "title_form" %>
  </div>

  <div class="field">
    <%= f.label :リンク %><br/>
    <%= f.text_field :link, class: "link_form" %>
  </div>

  <div class="field">
    <%= f.label :評価 %><span>※必須</span><br/>
    <%= f.number_field :rate, min: 1, max: 5, class: "rate_form" %>
  </div>

  <div class="field">
    <%= f.label :内容 %><span>※必須</span><br/>
    <%= f.text_area :content, placeholder: "テキストを入力してください...", class: "content_form" %>
  </div>

  <div class="field">
    <%= f.label :タグ %><br/>
    <%= f.text_area :tag_ids, placeholder: "タグをつける。複数つけるには','で区切ってください。", value: "" %>
  </div>

  <%= f.submit "レビューを投稿する" %>
<% end %>
