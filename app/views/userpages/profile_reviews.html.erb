      </div>
      <div class="mypage-reviews-title-profile"><%= @user.profile %></div>

      <%= button_to userpage_path(@user.id), class: "profile-reviews", method: :get do %>
          <div class="">マイページに戻る</div>
      <% end %>

    </div>
    <div class="mypage-reviews-title-right col-md-5">
      <div class="myprofile-status">
        <div class="myprofile-status-title">公開設定</div>
        <div class="myprofile-status-content">公開</div>
      </div>
      <div class="myprofile-status">
        <div class="myprofile-status-title">投稿数</div>
        <div class="myprofile-status-content"><%= @all_reviews.size %>投稿</div>
      </div>
      <div class="myprofile-status">
        <div class="myprofile-status-title">初めてのレビュー</div>
        <div class="myprofile-status-content"><%= l @reviews.last.created_at %></div>
      </div>
      <div class="myprofile-status">
        <div class="myprofile-status-title">最新のレビュー</div>
        <div class="myprofile-status-content"><%= l @reviews.first.created_at %></div>
      </div>
    </div>
  </div>
  <div class="mypage-reviews-post-subinfo row">
    <div class="mypage-reviews-posts col-8">
      <% unless @reviews.size == 0 %>
        <% @reviews.each do |review| %>
          <%= link_to review_path(review), class: "mypage-reviews-post" do %>
            <div class="mypage-reviews-post-names-div">
              <div class="mypage-reviews-post-names">
                <% if @user.avatar.url %>
                  <img src="<%= @user.avatar.url %>" class="icon-image-class mypage-reviews-title-image" style="height: 45px; width: 45px;">
                <% else %>
                  <img src="/uploads/user/avatar/default.png" class="icon-image-class mypage-reviews-title-image" style="height: 45px; width: 45px;">
                <% end %>
                <div class="mypage-reviews-post-username">
                  <%= @user.username %>
                  <div class="all-review-to-since">
                    <span class="all-review-to-word">Since <%= review.user.created_at.strftime("%Y-%m-%d") %></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="mypage-reviews-stars">
              <% review.rate.times do |time| %>
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="_x32_" x="0px" y="0px" width="15px" height="15px" viewBox="0 0 512 512" style="width: 17px; height: 17px; opacity: 1;" xml:space="preserve">
                  <g>
                    <polygon class="st0" points="256,12.531 327.047,183.922 512,198.531 370.938,319.047 414.219,499.469 256,402.563 97.781,499.469    141.063,319.047 0,198.531 184.953,183.922  " style="fill: #ffd055;"/>
                  </g>
                </svg>
              <% end %>
            </div>
            <div class="mypage-review-content">
              <%= review.content %>
              <% review.tags.each do |tag| %>
                <span class="mypage-review-tag">#<%= tag.name %></span>
              <% end %>
            </div>
            <div class="mypage-review-bottom">
              <div class="mypage-review-bottom-icons">
                <div class="mypage-review-icon"><i class="far fa-comment mypage-reviews-comment-icon"></i></div>
                <div class="mypage-review-icon"><i class="fas fa-retweet mypage-reviews-recommend-icon"></i></div>
                <div class="mypage-review-icon"><i class="far fa-heart mypage-reviews-like-icon"></i></div>
              </div>
              <div class="mypage-review-created-at"><%= l review.created_at %></div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div class="mypage-reviews-subinfo col-4">
      <div class="mypage-reviews-subinfo-involved-users">
        <div id="unknown_users">
          <div class="mypage-find-friends">友達を見つけよう！</div>
          <% if @unknown_users %>
            <% @unknown_users.each do |unknown_user| %>
              <div>
                <% @user = unknown_user %>
                <div class="mypage-reviews-min-follows">
                  <div class="mypage-min-profile">
                    <% if @user.avatar.url %>
                      <img src="<%= @user.avatar.url %>" class="icon-image-class" style="height: 40px; width: 40px;">
                    <% else %>
                      <img src="/uploads/user/avatar/default.png" class="icon-image-class" style="height: 40px; width: 40px;">
                    <% end %>
                    <div class="min-follow-username">
                      <%= @user.username %>
                      <span class="profile-reviews-follow-btn-word">Since <%= @user.created_at.strftime("%Y-%m-%d") %></span>
                    </div>
                  </div>
                  <div id="follow-div<%= @user.id %>" class="mypage-reviews-follow-btn">
                    <% if current_user.following?(@user) %>
                      <div id="not_follow_btn<%= @user.id %>" class="mypage_reviews_not_follow_btn_ajax all-reviews-icon">
                        following
                      </div>
                    <% else %>
                      <div id="follow_btn<%= @user.id %>" class="mypage_reviews_follow_btn_ajax all-reviews-icon">
                        <i class="fa-xs fas fa-plus"></i>
                        follow
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="mypage-min-none-user">フォローしていないユーザーはいません。</div>
          <% end %>
        </div>
      </div>
      <div class="mypage-reviews-subinfo-known-users">
        <div id="may_friend_users">
          <div>
            <% if @may_friend_users %>
              <div class="mypage-maybe-friends">知り合いかも？</div>
              <% @may_friend_users.each do |may_friend_user| %>
                <% @user = may_friend_user %>
                <div class="mypage-reviews-min-follows">
                  <div class="mypage-min-profile">
                    <% if @user.avatar.url %>
                      <img src="<%= @user.avatar.url %>" class="icon-image-class" style="height: 40px; width: 40px;">
                    <% else %>
                      <img src="/uploads/user/avatar/default.png" class="icon-image-class" style="height: 40px; width: 40px;">
                    <% end %>
                    <div class="min-follow-username">
                      <%= @user.username %>
                      <span class="profile-reviews-follow-btn-word">Since <%= @user.created_at.strftime("%Y-%m-%d") %></span>
                    </div>
                  </div>
                  <div id="follow-div<%= @user.id %>" class="mypage-reviews-follow-btn">
                    <% if current_user.following?(@user) %>
                      <div id="not_follow_btn<%= @user.id %>" class="mypage_reviews_not_follow_btn_ajax all-reviews-icon">
                        following
                      </div>
                    <% else %>
                      <div id="follow_btn<%= @user.id %>" class="mypage_reviews_follow_btn_ajax all-reviews-icon">
                        <i class="fa-xs fas fa-plus"></i>
                        follow
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="mypage-min-none-user">知り合いかもしれないユーザーはいません。</div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <%= paginate @reviews %>
  </div>
</div>

